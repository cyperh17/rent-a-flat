    var list = [
        {
            image: './img/flat_1.png',
            title: 'НЕМЧИНОВКА',
            price: '25 000 000 ₽',
            description: 'Это описание квартиры на продажу номер 1. Отредактируйте текст, чтобы рассказать своим клиентам про данную квартиру.',
            bedrooms: 4,
            href: '#'
        },
        {
            image: './img/flat_2.png',
            title: 'МАРУШКИНО',
            price: '35 000 000 ₽',
            description: 'Это описание квартиры на продажу номер 2. Отредактируйте текст, чтобы рассказать своим клиентам про данную квартиру.',
